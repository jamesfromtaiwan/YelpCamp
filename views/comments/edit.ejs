<% include ../partials/header  %>
<div class="container form">
	<div class="row">
		<div class="form-main">
			<h1 class="form-heading">Edit Comment</h1>
			<form action="/campgrounds/<%= campground %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block btn-lg">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer  %>